{
  "name": "@ng-nest/plugin",
  "version": "0.0.1",
  "scripts": {
    "build": "tsc -p tsconfig.schematics.json",
    "copy:schemas": "cpx schematics/*/schema.json ../../dist/ng-nest-plugin/schematics/",
    "copy:files": "cpx schematics/*/files/** ../../dist/ng-nest-plugin/schematics/",
    "copy:collection": "cpx schematics/collection.json ../../dist/ng-nest-plugin/schematics/",
    "postbuild": "npm run copy:schemas && npm run copy:files && npm run copy:collection"
  },
  "schematics": "./schematics/collection.json",
  "peerDependencies": {
    "@angular/common": "~13.0.0",
    "@angular/core": "~13.0.0"
  },
  "dependencies": {
    "tslib": "~2.3.0"
  },
  "ng-add": {
    "save": "devDependencies"
  }
}
